<Window x:Class="WPF.WindowsManager.Test.Views.CoverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CoverWindow" Height="300" Width="300" WindowStyle="None" ShowInTaskbar="False" AllowsTransparency="True"
        Loaded="CoverWindow_OnLoaded" MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown_" x:Name="Win">
    <TextBlock Text="{Binding Title,ElementName=Win}" FontSize="20" Foreground="Green" VerticalAlignment="Center" HorizontalAlignment="Center"/>
</Window>
