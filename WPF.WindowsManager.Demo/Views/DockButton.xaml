<Window x:Class="WPF.WindowsManager.Demo.Views.DockButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:windowsManager="clr-namespace:WPF.WindowsManager;assembly=WPF.WindowsManager"
        Title="DockButton" Height="80" Width="80" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False">
    <windowsManager:WindowsDockManager.DockBehavior>
        <windowsManager:DockBehavior RegionName="Dock" Dock="Right,Bottom" Offset="-10,-10" IsDockKeep="True"/>
    </windowsManager:WindowsDockManager.DockBehavior>

    <Grid>
        <Ellipse Fill="SkyBlue"/>

        <TextBlock Text="Dock" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
    </Grid>
</Window>

